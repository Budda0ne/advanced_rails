$('.comment-errors').html('<%= j render 'shared/errors', resource: @comment %>');

<% if @comment.persisted? %>
<% answer_comments = "#{@comment.commentable_type.downcase}-#{@comment.commentable.id}-comments" %>
<% question_comments = "#{@comment.commentable_type.downcase}-comments" %>
$('.<%=@comment.commentable_type.downcase.eql?('answer') ? answer_comments : question_comments %>').append('<%= j render @comment %>');
$('#comment_body').val('');
<% end %>
